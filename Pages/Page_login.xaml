<Page x:Class="Project.Pages.Page_login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="Page_login">
    <Page.Resources>
        <ResourceDictionary Source="/Dictionaries/Dictionary_authorization.xaml"/>
    </Page.Resources>
    <StackPanel Height="400">
        <TextBlock Text="LOG IN TO YOUR ACCOUNT" Style="{StaticResource SectionText}" />
        <TextBlock Text="LOGIN" Style="{StaticResource Placeholder}" />
        <TextBox x:Name="Login_login"/>
        <TextBlock Text="PASSWORD" Style="{StaticResource Placeholder}" />
        <PasswordBox x:Name="Login_password"/>
        <Button x:Name="Button_login_to_account" Content="LOGIN" Style="{StaticResource LoginButtonStyle}" 
                Click="Button_login_to_account_Click" />
    </StackPanel>
</Page>
