<Application x:Class="Project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Project"
             StartupUri="/Windows/MainWindow.xaml" >

    <Application.Resources>
        <ControlTemplate x:Key="ErrorValidation">
            <Border BorderBrush="#FFBDBD" BorderThickness="1">
                <Grid>
                    <AdornedElementPlaceholder/>
                    <TextBlock Text="{Binding [0].ErrorContent}" Foreground="#000"
                               FontSize="12" Margin="10" FontFamily="Roboto"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                </Grid>
            </Border>
        </ControlTemplate>
    </Application.Resources>
    
</Application>
